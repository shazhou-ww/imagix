{
  "name": "imagix",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently -n db,init,api,web -c blue,cyan,green,magenta \"bun run dev:db\" \"bun run dev:db-init\" \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:db": "docker compose up dynamodb-dev",
    "dev:db-init": "bun run scripts/init-dynamodb-local.ts --port 4513",
    "dev:backend": "cd backend && DYNAMODB_ENDPOINT=http://127.0.0.1:4513 TABLE_NAME=imagix bun run --watch src/server.ts",
    "dev:frontend": "cd frontend && bun run dev",
    "test:db": "docker compose up dynamodb-test -d",
    "test:db-init": "bun run scripts/init-dynamodb-local.ts --port 4512",
    "test:db-stop": "docker compose stop dynamodb-test",
    "build": "bun run build:shared && bun run build:frontend",
    "build:shared": "cd shared && bun run build",
    "build:frontend": "cd frontend && bun run build",
    "deploy": "sst deploy --stage prod",
    "deploy:dev": "sst deploy --stage dev",
    "test": "bun run test:shared && bun run test:frontend && bun run test:backend",
    "test:shared": "cd shared && bun run test",
    "test:frontend": "cd frontend && bun run test",
    "test:backend": "cd backend && bun run test",
    "typecheck": "bun run typecheck:shared && bun run typecheck:frontend && bun run typecheck:backend && bun run typecheck:scripts",
    "typecheck:shared": "cd shared && tsc --noEmit",
    "typecheck:frontend": "cd frontend && tsc --noEmit",
    "typecheck:backend": "cd backend && tsc --noEmit",
    "typecheck:scripts": "tsc --noEmit -p scripts",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "markdownlint": "markdownlint '**/*.md' --ignore node_modules",
    "markdownlint:fix": "markdownlint '**/*.md' --ignore node_modules --fix",
    "aws:login": "bun run scripts/aws-login.ts",
    "sst:secrets": "sst secret"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.700.0",
    "@aws-sdk/client-cloudfront": "^3.700.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.700.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@biomejs/biome": "^2.4.2",
    "@types/node": "^25.3.0",
    "bun-types": "^1.3.9",
    "concurrently": "^9.2.1",
    "markdownlint-cli": "^0.43.0",
    "sst": "^3.19.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  }
}
