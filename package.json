{
  "name": "imagix",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:db\" \"bun run dev:db-init\" \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:db": "docker compose up dynamodb-local",
    "dev:db-init": "bun run scripts/init-dynamodb-local.ts",
    "dev:backend": "bun run build:backend && cd backend && sam local start-api --port 4511 --warm-containers EAGER --env-vars env-vars.json",
    "dev:frontend": "cd frontend && bun run dev",
    "build": "bun run build:shared && bun run build:backend && bun run build:frontend",
    "build:shared": "cd shared && bun run build",
    "build:backend": "bun run build:shared && bun scripts/build-backend.ts && cd backend && sam build",
    "build:frontend": "cd frontend && bun run build",
    "deploy": "bun run build && cd backend && sam deploy",
    "deploy:frontend": "bun run scripts/deploy-frontend.ts",
    "test": "bun run test:shared && bun run test:frontend && bun run test:backend",
    "test:shared": "cd shared && bun run test",
    "test:frontend": "cd frontend && bun run test",
    "test:backend": "cd backend && bun run test",
    "typecheck": "bun run typecheck:shared && bun run typecheck:frontend && bun run typecheck:backend && bun run typecheck:scripts",
    "typecheck:shared": "cd shared && tsc --noEmit",
    "typecheck:frontend": "cd frontend && tsc --noEmit",
    "typecheck:backend": "cd backend && tsc --noEmit",
    "typecheck:scripts": "tsc --noEmit -p scripts",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "markdownlint": "markdownlint '**/*.md' --ignore node_modules",
    "markdownlint:fix": "markdownlint '**/*.md' --ignore node_modules --fix",
    "aws:login": "bun run scripts/aws-login.ts",
    "cognito:setup": "bun run scripts/cognito-setup.ts",
    "cognito:add-google": "bun run scripts/cognito-add-google.ts"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-cloudformation": "^3.700.0",
    "@aws-sdk/client-cloudfront": "^3.700.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.700.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@biomejs/biome": "^2.4.2",
    "bun-types": "^1.3.9",
    "concurrently": "^9.2.1",
    "markdownlint-cli": "^0.43.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  }
}
